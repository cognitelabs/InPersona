<%= content_for :title do %>Sign Up<% end %>

<div class="col-md-12">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= render "layouts/form_errors", object: resource %>

    <div class="form-group">
      <%= f.label "E-mail" %>
      <%= f.email_field :email, :autofocus => true, placeholder: 'Your e-mail', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Your password', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password, placeholder: 'Confirm password', class: 'form-control' %>
    </div>

    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>